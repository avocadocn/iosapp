
// global variables

themeColor = #3abde8

// 页面用于衬托内容的背景色
wrapBgColor = #f6f6f6

// 页面内容背景色
contentBgColor = #ffffff

// 页面内部标题的背景颜色
headBgColor = #ededed





// common style or css tools


body
  background-color themeColor


.wrap
  background-color wrapBgColor

.content
  background-color contentBgColor

.head_title
  background-color headBgColor
  height 40px
  text-align center

  .title
    display inline-block
    box-sizing border-box
    margin 5px 0
    padding 0 20px
    font-size 14px
    line-height 30px
    border-width 1px
    border-style solid
    border-color #dcdcdc #e9e9e9 #f6f6f6 #e9e9e9
    border-radius 7px
    background-color headBgColor

.table_wrap
  display table
  width 100%
  height 100%

.table_cell
  display table-cell
  width 100%
  height 100%
  text-align center
  vertical-align middle

.col-30
  -webkit-flex 0 0 30%
  -moz-box-flex 0
  -moz-flex 0 0 30%
  -ms-flex 0 0 30%
  flex 0 0 30%
  max-width 30%

.col-40
  -webkit-flex 0 0 40%
  -moz-box-flex 0
  -moz-flex 0 0 40%
  -ms-flex 0 0 40%
  flex 0 0 40%
  max-width 40%

.padding
  padding 10px

.donler_tabs
  .tab-item
    background-color themeColor
    color white

.donler_tabs_bottom
  .tabs
    height 60px
    line-height 1
    background-image none

    .tab-item
      padding-top 5px
      padding-bottom 5px


.clearfix
  clear both



