/* Empty. Add your own CSS if you like */

body
  background-color #e2e2e2

.dl_header
  opacity 0.9
.campaigns_container
  padding-bottom 44px
  .campaign_list
    height 100%
    margin-bottom 49px
    background-color #e2e2e2
    .campaign_container
      .campaign_container_title
        color #618BD7
        font-size 24px
        margin-left 20px
        padding-top 20px
      .dl_card
        margin 20px 20px 15px
        box-shadow 0 4px 0 rgba(204, 204, 204, 1)
        background-color #fff
        .item
          background-color #fff
          border-color #fff
        .dl_card_header
          .dl_team_logo_right
            position absolute
            top 16px
            right 16px
          .dl_team_vs
            width 100%
            height 30px
            width 135px
            display block
            background-color #6a73c6
            margin 0 auto
            border-radius 100%
            color #fff
            font-size 32px
            line-height 24px
            text-align center
          .button_container
            position absolute
            right 16px
            top 16px
        .dl_card_header_provoke
          padding-right 72px
        .dl_card_body
          .dl_prvoke_info
            .dl_team_name
              color #6a73c6
              margin 0 5px
          .dl_photo_alb
            white-space nowrap
.bar-footer
  padding 0
.icon_blue
  color #3ca2e0
.button-bar > .button
  padding 0
  color #999
.tabs
  background-color #000
  color #fbfbfb
  .tab-item
    position relative
    .icon
      width 32px
    .red_spot
      background-color #f48361
      position absolute
      width 12px
      height 12px
      border-radius 100%
      left 55%
      top 5%
.ion_campaign
  background-image url('/img/icon.png')
  background-size 160px
  background-position 8px 5px
  &.active
    background-position 8px -35px
.ion_discuss
  background-image url('/img/icon.png')
  background-size 160px
  background-position -33px 5px
  &.active
    background-position 8px -35px
.ion_discover
  background-image url('/img/icon.png')
  background-size 160px
  background-position -73px 5px
  &.active
    background-position 8px -35px
.ion_personal
  background-image url('/img/icon.png')
  background-size 160px
  background-position -113px 5px
  &.active
    background-position 8px -35px
.comments
  .time
    text-align center
    width 100%
    float left
  .comment
    width 100%
    .content
      float left
      width 80%
    .author
      float right
      width 20%
