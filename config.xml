<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget id="com.donler.app" version="1.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
  <name>Donler</name>
  <description>
      动梨活动助理
  </description>
  <author email="service@donler.com" href="http://www.donler.com">
    Donler
  </author>
  <content src="index.html"/>
  <access origin="*"/>
  <preference name="webviewbounce" value="false"/>
  <preference name="UIWebViewBounce" value="false"/>
  <preference name="DisallowOverscroll" value="true"/>
  <preference name="BackupWebStorage" value="none"/>
  <preference name="orientation" value="portrait" />

  <feature name="StatusBar">
    <param name="android-package" value="CDVStatusBar" onload="true"/>
  </feature>
  <plugin name="LaunchMyApp" value="nl.xservices.plugins.LaunchMyApp"/>
  <params name="URL_SCHEME" value="donler" />
<!--   <gap:config-file platform="android" parent="/manifest/application"> <activity android:launchMode="singleTask" /> </gap:config-file>
  <gap:plugin name="nl.x-services.plugins.launchmyapp">
    <param name="URL_SCHEME" value="donler" />
  </gap:plugin> -->
  <platform name="android">
      <!-- <preference name="Fullscreen" value="true" /> -->
      <preference name="SplashScreen" value="screen"/>
      <icon src="icons/android/drawable-ldpi/donler.png" density="ldpi" />
      <icon src="icons/android/drawable-mdpi/donler.png" density="mdpi" />
      <icon src="icons/android/drawable-hdpi/donler.png" density="hdpi" />
      <icon src="icons/android/drawable-xhdpi/donler.png" density="xhdpi" />

      <splash src="splash/android/drawable-xhdpi/screen.png" density="land-hdpi"/>
      <splash src="splash/android/drawable-xhdpi/screen.png" density="land-ldpi"/>
      <splash src="splash/android/drawable-xhdpi/screen.png" density="land-mdpi"/>
      <splash src="splash/android/drawable-xhdpi/screen.png" density="land-xhdpi"/>

      <splash src="splash/android/drawable-xhdpi/screen.png" density="port-hdpi"/>
      <splash src="splash/android/drawable-xhdpi/screen.png" density="port-ldpi"/>
      <splash src="splash/android/drawable-xhdpi/screen.png" density="port-mdpi"/>
      <splash src="splash/android/drawable-xhdpi/screen.png" density="port-xhdpi"/>
     
    </platform>
</widget>