    for capacity in (1..6)
      .inner_{capacity}
        margin-left auto
        margin-right auto
    for i in (1..6)
      .cell_{i}
        float left
    .inner_1
      width smallBoxInnerSize
      .cell_1
        largeCell()
    .inner_2
      width largeBoxInnerSize
      .cell_1, .cell_2
        largeCell()
      .cell_2
        margin-left cellGap
    .inner_3
      width middleBoxInnerSize
      .cell_1
        largeCell()
      .cell_2, .cell_3
        margin-left cellGap
        smallCell()
      .cell_3
        margin-top cellGap
    .inner_4
      width smallBoxInnerSize
      .cell_1, .cell_2, .cell_3, .cell_4
        smallCell()
      .cell_2, .cell_4
        margin-left cellGap
      .cell_3, .cell_4
        margin-top cellGap
    .inner_5
      width largeBoxInnerSize
      .cell_1
        largeCell()
      .cell_2, .cell_3, .cell_4, .cell_5
        margin-left cellGap
        smallCell()
      .cell_4, .cell_5
        margin-top cellGap
    .inner_6
      width middleBoxInnerSize
      for i in (1..6)
        .cell_{i}
          smallCell()
      .cell_2, .cell_3, .cell_5, .cell_6
        margin-left cellGap
