      .cell_2
        margin-left cellGap
    .inner_3
      width middleBoxInnerSize
      .cell_1
        largeCell()
      .cell_2, .cell_3
        margin-left cellGap
        smallCell()
      .cell_3
        margin-top cellGap
    .inner_4
      width smallBoxInnerSize
      .cell_1, .cell_2, .cell_3, .cell_4
        smallCell()
      .cell_2, .cell_4
        margin-left cellGap
      .cell_3, .cell_4
