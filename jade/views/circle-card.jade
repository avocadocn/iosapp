.dl_circle_card.clearfix
  img.circle_company_logo(ng-if="kind === 'company'" ng-src="{{staticUrl + circle.content.poster.photo}}/40/40" ng-click="goToUserPage(circle.content.poster._id)")
  img.circle_company_logo(ng-if="kind === 'user' && !circle.content.teamInfo && circle.content.companyInfo" ng-src="{{staticUrl + circle.content.companyInfo.info.logo}}/32/32")
  img.circle_company_logo(ng-if="kind === 'user' && circle.content.teamInfo" ng-src="{{staticUrl + circle.content.teamInfo.logo}}/40/40" ng-click="goToTeamPage(circle.content.teamInfo._id)")
  .circle_info
    h2.user_name.link_name(ng-if="kind === 'company'")
      span(ng-click="goToUserPage(circle.content.poster._id)" ng-bind="circle.content.poster.nickname")
    h2.user_name.link_name(ng-if="kind === 'user' && !circle.content.teamInfo && circle.content.companyInfo")
      span(ng-bind="circle.content.companyInfo.info.name")
    h2.user_name.link_name(ng-if="kind === 'user' && circle.content.teamInfo")
      span(ng-click="goToTeamPage(circle.content.teamInfo._id)" ng-bind="circle.content.teamInfo.name")
    .circle_content
      .content_text(ng-show="circle.content.content" ng-bind="circle.content.content")
      span.ellipsis(ng-if="showContentStatus.showOverAll") ...
      a.link_name(ng-if="showContentStatus.showOverAll" ng-click="showAllContent()") 全文
      a.link_name(ng-if="showContentStatus.showPartial" ng-click="showPartialContent()") 收起
    .image_box.clearfix
      img.preview_img(ng-repeat="photo in circle.content.photos" ng-src="{{staticUrl + photo.uri}}/150/150" error-img ng-click="clickImg(photo)")
    p.campaign_link: a.link_name(ng-if="circle.content.campaign_id" ng-href="#/campaign/detail/{{circle.content.campaign_id}}" ng-bind="circle.content.campaignTheme")
    .date_and_op.clearfix
      span.date.text_item {{circle.content.post_date | circleBeforeNow}}
      span.link_name.text_item(ng-if="uid === circle.content.post_user_id" ng-click="deleteCircleContent(circle)") 删除
      i.dl_icon.ion_chat_blue.op_icon
      .toggle_click_wrap(ng-click="toggleComment()")
      .comment_op.clearfix(ng-if="circle.isToComment")
        .op_box.clearfix
          .op_item(ng-if="!hasAppreciate(circle)" ng-click="appreciate(circle)")
            i.ion-heart
            | &nbsp;赞
          .op_item(ng-if="hasAppreciate(circle)" ng-click="cancelAppreciate(circle)" ng-cloak)
            i.ion-heart
            | &nbsp;取消
          .op_divider
          .op_item(ng-click="commentToContent()")
            i.ion-chatbox-working
            | &nbsp;评论
    .circle_comment_list(ng-if="circle.appreciate.length > 0 || circle.textComments.length > 0")
      .circle_triangle
      .appreciate_container(ng-if="circle.appreciate.length > 0")
        //-i.ion-heart.appreciate_icon
        span.link_name @
        span.appreciate.link_name(ng-repeat="appr in circle.appreciate" ng-click="goToUserPage(appr.poster._id)" ng-bind="appr.poster.nickname")
      .comment_container(ng-if="circle.textComments.length > 0")
        .comment(ng-repeat="comment in circle.textComments" ng-click="replyTo(circle, comment)" on-hold="commentOnHoldHandler(comment, circle.textComments)")
          span.nickname.link_name(ng-click="goToUserPage(comment.poster._id)" prevent-default ng-bind="comment.poster.nickname")
          span.reply_text(ng-if="!comment.is_only_to_content" ng-cloak) 回复
          span.reply_to.link_name(ng-if="!comment.is_only_to_content" ng-click="goToUserPage(comment.target._id)" prevent-default ng-bind="comment.target.nickname")
          span.colon :
          span.content(ng-bind-html="comment.content | emoji | unsafe")
