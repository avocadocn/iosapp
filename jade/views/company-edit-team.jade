ion-view.edit_team_info

  ion-header-bar
    a.button.icon.ion-chevron-left(ng-if="!editing" ng-href="#/company/team_list/all" ng-cloak) &nbsp;返回
    button.button(ng-if="editing" ng-click="cancelEditing()" ng-cloak) 取消
    h1.title 编辑小队信息
    button.button(ng-if="editing" ng-click="edit()" ng-disabled="!changed || editForm.$invalid" ng-cloak) 确定

  ion-content
    form.list(name="editForm")
      .item.item-input
        span.input-label 小队名称
        input(type="text" name="nickname" ng-change="change()" placeholder="小队名称上限20字" maxlength="20" ng-model="formData.name" ng-focus="toEditing()" required)
    .list
      .item.item-input
        span.input-label 队长管理
        //-现任队长logo
        button.dl_button.pull-right(ng-if="false" ng-click="") 显示组员
        button.dl_button.pull-right(ng-if="true" ng-click="") 显示公司成员
      .item.item-input.leader
        span.input-label 现任队长
        .input-label
          img.leader_logo(src="img/icons/unjoined_discuss.png")
          span 队长名称
      .item.item-input.search
        input(type="text" placeholder="搜索成员" ng-model="memberName" ng-keypress="" )
        i.icon.ion-search.placeholder-icon.dl_search_icon
      .item.people
        .person(ng-repeat="person in [1,1,1,1,1,1] track by $index" ng-click="point();change()")
          img.photo
          .name {{person}}
