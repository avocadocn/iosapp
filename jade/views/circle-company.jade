ion-view.circle_company
  ion-header-bar
    a.button.icon-left.ion-chevron-left(ng-click="goBack()") &nbsp;返回
    h1.title 同事圈

  ion-content
    ion-refresher(on-refresh="refresh()" refreshing-icon="ion-looping" ng-if="!loadOptions.loadingNew")
    .loading_cover(ng-if="loadOptions.loadingNew" ng-cloak)
      i.icon.ion-looping
    .circle_company_image
    .circle_user
      a.circle_user_name {{user.nickname}}
      img.circle_user_image(ng-src="{{STATIC_URL + user.photo}}/70/70")
    a.dl_circle_company_card.clearfix(ng-repeat="circle in circles" ng-cloak)
      img.circle_company_logo(ng-src="{{STATIC_URL + circle.user.photo}}/32/32")
      .circle_info 
        h2.user_name {{circle.user.nickname}}
        p.circle_content {{circle.content.content}}
        .icon_comment
          i.circle_delete(ng-if="user._id == circle.user._id" ng-click="circleContentDelete($event)" id="{{circle.content._id}}") 删除
          i.ion_comment.circle_comment
    ion-infinite-scroll(ng-if="!loadOptions.loadingOld" icon="ion-looping" on-infinite="loadMore()" distance="1%")