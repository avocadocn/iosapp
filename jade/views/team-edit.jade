ion-view.edit_info

  ion-header-bar
    a.button.icon.ion-chevron-left(ng-href="#/team/{{team._id}}") &nbsp;返回
    h1.title 编辑小队信息

  ion-content
    form.list(name="editForm")
      .item.item-thumbnail-right(ng-click="showUploadActionSheet()")
        img(ng-src="{{STATIC_URL + team.logo}}/160/160")
        h2 头像
      .item.item-input
        span.input-label 小队名称
        input(type="text" name="nickname" ng-change="change()" maxlength="20" ng-model="formData.name" required)
      .item.item-input
        span.input-label 简介
        textarea.introduce(name="brief" ng-change="change()" maxlength="140" ng-model="formData.brief")
      .padding
        button.button.button-block.button-positive(ng-disabled="unchanged || editForm.$invalid" ng-click="edit()") 确定