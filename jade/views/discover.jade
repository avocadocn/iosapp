ion-view.discover(ng-controller="DiscoverController")

  ion-header-bar

    h1.title 发现

  ion-content
    ion-refresher(on-refresh="getMyTeams(true)" refreshing-icon="ion-looping" pulling-text="下拉刷新" refreshing-text="刷新中...")
    //- .discover_image
    .list
      a.item.item-icon-left.item-icon-right(href="#/discover/search_opponent")
        i.icon.ion_teams
        | 找对手
        i.icon.ion-chevron-right
      a.item.item-icon-left.item-icon-right(href="#/rank/select")
        i.icon.ion-android-contacts
        | 排行榜
        i.icon.ion-chevron-right
      a.item.item-icon-left.item-icon-right(href="#/competition_message/list")
        i.icon.ion_ballon
        | 挑战日志
        span.badge_dot(ng-if="hasNewDiscover")
        i.icon.ion-chevron-right
    .rank_panel
      .team_select(ng-if="teams.length>0")
        .team_container
          .team.last_team(ng-click="changeSelectTeam(-1)" ng-if="nowTeamIndex>0")
            i.icon.ion-ios7-arrow-back
            img.team_logo(ng-src="{{STATIC_URL + teams[nowTeamIndex-1].logo}}/40/40")
            .team_name {{teams[nowTeamIndex-1].name}}
        .team_container
          .team
            img.team_logo(ng-src="{{STATIC_URL + teams[nowTeamIndex].logo}}/40/40")
            .team_name {{teams[nowTeamIndex].name}}
        .team_container
          .team.next_team(ng-click="changeSelectTeam(1)"  ng-if="nowTeamIndex<teams.length-1")
            img.team_logo(ng-src="{{STATIC_URL + teams[nowTeamIndex+1].logo}}/40/40")
            .team_name {{teams[nowTeamIndex+1].name}}
            i.icon.ion-ios7-arrow-forward
      //- .team_select
      //-   label.item.item-input.item-select
      //-     span.input-label 我的小队排名:
      //-     select.select_info(ng-change="changeSelectTeam(selectTeam)" ng-model="selectTeam" ng-options="team.name for team in teams")

      .rank_table
        .row
          .col 排名
          .col logo
          .col 小队名
          .col 积分
          .col
           div 胜率
           div (胜:平:负)
        a.row(ng-href="#/competition/team/{{rankTeam._id}}" ng-repeat="rankTeam in selectTeam.rankTeams" ng-if="rankTeam.score_rank.rank")
          .col {{rankTeam.score_rank.rank}}
          .col: img.team_logo(ng-src="{{STATIC_URL + rankTeam.logo}}/40/40")
          .col.team_name {{rankTeam.name}}
          .col {{rankTeam.score_rank.score || 0}}
          .col {{rankTeam.score_rank.win}} : {{rankTeam.score_rank.tie}} : {{rankTeam.score_rank.lose}}