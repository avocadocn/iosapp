ion-view

  ion-header-bar
    h1.title 我的

  ion-content
    .list.card
      .item.item-avatar
        img(ng-src="{{STATIC_URL + user.photo}}")
        h2 {{user.nickname}}
        p 公司：{{user.company.name}}
        p(ng-if="user.department" ng-cloak) 部门：{{user.department.name}}
        p(ng-if="!user.department" ng-cloak) 部门：无
        p(ng-cloak) 手机：{{user.phone || '-'}}
        p(ng-cloak) 邮箱：{{user.email}}
    .list
      a.item.item-icon-left.item-icon-right(href="#/app/personal_teams")
        i.icon.ion-mic-a
        | 我的小队
        i.icon.ion-chevron-right
      a.item.item-icon-left.item-icon-right(href="#/personal/timeline")
        i.icon.ion-mic-a
        | 我的足迹
        i.icon.ion-chevron-right
      a.item.item-icon-left.item-icon-right(href="#/personal/messages")
        i.icon.ion-mic-a
        | 我的站内信
        i.icon.ion-chevron-right
      a.item.item-icon-left.item-icon-right(href="#")
        i.icon.ion-mic-a
        | 我的日程
        i.icon.ion-chevron-right
      a.item.item-icon-left.item-icon-right(href="#/app/settings")
        i.icon.ion-mic-a
        | 设置
        i.icon.ion-chevron-right
