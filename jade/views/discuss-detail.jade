          //-     .name(bo-if="chat.poster._id == userId") 我
          //-     .content
          //-       .triangle_isosceles.triangle_img
          //-         .tr
          //-           img(ng-if="!chat.randomId" img-cache ic-src="{{STATIC_URL +photo.uri+ '/360/360'}}" error-img width="180" height="180")
          //-           img(ng-if="chat.randomId" img-cache ic-src="photo.uri" error-img width="180" height="180")
          //-         .box(ng-if="!chat.randomId" photo="photo" pswp-id="pswpId" photos="photos" pswp-photo-album="pswpPhotoAlbum" photo-album-id="photoAlbumId" open-photo)
          //-           img.img(img-cache ic-src="{{STATIC_URL +photo.uri+ '/360/360'}}" width="180" height="180"  error-img)
          //-         .box(ng-if="chat.randomId")
          //-           img.img(img-cache ic-src="{{photo.uri}}" width="180" height="180")
          .comment.clearfix(bo-class="{'putright': chat.from == userId}")
            a.logo(bo-if="chat.poster && !chat.poster_team" ng-href="#/user/{{chat.poster._id}}")
              img(img-cache ic-src="{{STATIC_URL +chat.poster.photo+ '/45/45'}}")
            a.logo(bo-if="chat.poster_team" bo-href="'#/team/'+chat.poster_team._id")
              img(img-cache ic-src="{{STATIC_URL +chat.poster_team.logo+ '/45/45'}}")
            .contents
              .name(bo-if="chat.from !== userId" bo-text="chat.from")
              .name(bo-if="chat.from == userId") 我
              .content
                .triangle_isosceles(ng-bind-html="chat.body.text | emoji | unsafe")
          .failed(ng-if="chat.status=='failed'" ng-cloak)
            .tip
              i.icon.ion-alert-circled
              span 发送失败

  ion-footer-bar.comment_box
    publish-box(is-show-emotions="isShowEmotions" is-writing="isWriting" content="content" publish="publish()" show-upload-action-sheet="showUploadActionSheet()")

  script(id="confirm-upload-modal.html" type="text/ng-template")
    ion-modal-view
      ion-header-bar
        button.button(ng-click="cancelUpload()") 取消
        h1.title 预览
        button.button(ng-click="confirmUpload()") 确定
      ion-content
        .card
          .item.item-image
            img(img-cache ic-src="{{previewImg}}")
  include ./photo-swipe
