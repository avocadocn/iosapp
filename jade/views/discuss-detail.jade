ion-view.discuss_detail(title="{{campaignTitle}}")
  ion-header-bar
    a.button.icon-left.ion-chevron-left(href="{{backUrl}}") &nbsp;返回
    h1.title {{campaignTitle}}
    a.button.icon-right.ion_campaign_active(href="#/campaign/detail/{{campaignId}}")
  .notice(ng-show="!hideNotice&&notification")
    .notice_cover
    .content
      span.notice_title 活动公告
      button.dl_button.close_button.pull-right(ng-click="hideNotice=true") x
      span.notice_content {{noticeSender}}:{{notification}}
  ion-content
    ion-refresher(on-refresh="readHistory()" pulling-text="下拉读取历史记录" refreshing-text="读取中...")
    .comments
      //- balloon?
      //- .balloon(ng-if="newComment")
      .blocks(ng-repeat="comments in commentList track by $index" id="comment{{$index}}")
        //- .test {{historyCommentList}}
        .block(ng-repeat="comment in comments track by $index" ng-init="showTime=needShowTime($index,comments)" ng-cloack)
          .time_block(ng-show="showTime && ($index!==0||($index===0&&topShowTime[$parent.$index]))")
            p
              span.time(ng-show="showTime===1 && ($index!==0||($index===0&&topShowTime[$parent.$index]===1))") {{comment.create_date | date: 'yyyy'}}
            p
              span.time {{comment.create_date | date: 'M月dd日 HH:mm'}}
          .comment(ng-repeat="photo in comment.photos" ng-class="{putright: comment.poster._id == userId}")
            .logo
              img(ng-src="{{STATIC_URL +comment.poster.photo+ '/45/45'}}")
            .contents
              .name(ng-if="comment.poster._id !== userId") {{comment.poster.nickname}}
              .name(ng-if="comment.poster._id == userId") 我
              i.icon.ion-looping(ng-if="comment.loading")
              .content
                .triangle_isosceles.triangle_img
                  .tr
                    img(ng-src="{{STATIC_URL +photo.uri+ '/360/360'}}" width="180" height="180")
                  .box
                    img.img(ng-if="!comment.randomId" ng-src="{{STATIC_URL +photo.uri+ '/360/360'}}" width="180" height="180" ng-click="openPhotoSwipe(photo._id)")
                    img.img(ng-if="comment.randomId" ng-src="{{photo.uri}}" width="180" height="180" ng-click="openPhotoSwipe(photo._id)")
          .comment(ng-class="{putright: comment.poster._id == userId}" ng-if="comment.content")
            .logo
              img(ng-src="{{STATIC_URL +comment.poster.photo+ '/45/45'}}")
            .contents
              .name(ng-if="comment.poster._id !== userId") {{comment.poster.nickname}}
              .name(ng-if="comment.poster._id == userId") 我
              i.icon.ion-looping(ng-if="comment.loading")
              .content
                .triangle_isosceles {{comment.content}}
      //-再做个刷新?todo
  ion-footer-bar.comment_box
    i.icon.ion-image(ng-click="showUploadActionSheet()")
    input.comment_input(ng-model = "commentContent")
    button.dl_button.publish_button(ng-click="publishComment()" ng-disabled="!commentContent") 发言

include ./photo-swipe