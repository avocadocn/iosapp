ion-header-bar.bar-positive
  .buttons
    button.button.button-icon.icon.ion-ios7-minus-outline(ng-click="data.showDelete = !data.showDelete;")
    h1.title All Todo Items
    button.button(ui-sref="createTodo") New
ion-content
  ion-list(show-delete="data.showDelete")
    ion-item(ng-repeat="item in items | orderBy: '-createdAt'" item="item" href="#/todo/edit/{{item.objectId}}/{{item.content}}")
      | {{item.content}}
      ion-delete-button.ion-minus-circled(ng-click="onItemDelete(item)")

