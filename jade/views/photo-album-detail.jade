ion-view
  ion-header-bar
    a.button.icon.ion-chevron-left(ng-href="{{photoAlbumBackUrl}}") &nbsp;返回
    h1.title {{photoAlbum.name}}

  ion-content
    .card(ng-repeat="group in photoGroups" on-last-repeat)
      p {{group.date | date:'yyyy年MM月dd日'}}
      .dl_gallery(itemscope itemtype="http://schema.org/ImageGallery")
        figure(itemscope itemtype="http://schema.org/ImageObject" ng-repeat="photo in group.photos")
          a(ng-href="{{STATIC_URL + photo.uri}}/resize/320/200" itemprop="contentUrl" data-size="320x200")
            img(ng-src="{{STATIC_URL + photo.uri}}/60/60" itemprop="thumbnail")
          figcaption(itemprop="caption description") {{photo.name}}

.pswp(tabindex="-1" role="dialog" aria-hidden="true")
  .pswp__bg
  .pswp__scroll-wrap
    .pswp__container
      .pswp__item
      .pswp__item
      .pswp__item
    .pswp__ui.pswp__ui--hidden
      .pswp__top-bar
        .pswp__counter
        button.pswp__button.pswp__button--close(title="关闭")
        button.pswp__button.pswp__button--fs(title="全屏")
        button.pswp__button.pswp__button--zoom(title="放大/缩小")
        .pswp__preloader
          .pswp__preloader__icn
            .pswp__preloader__cut
              .pswp__preloader__donut
      button.pswp__button.pswp__button--arrow--left(title="上一张")
      button.pswp__button.pswp__button--arrow--right(title="下一张")
      .pswp__caption
        .pswp__caption__center