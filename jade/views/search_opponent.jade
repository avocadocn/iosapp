ion-view.search_opponent
  ion-header-bar
    a.button.icon.ion-chevron-left(href="#/app/discover") &nbsp;返回
    h1.title 发现
  ion-content(has-bouncing=false)
    ion-refresher(on-refresh="doRefresh()" refreshing-icon="ion-looping" pulling-text="下拉读取历史记录" refreshing-text="读取中...")
    .select_team(ng-if="!hasSelected")
      .item.item-divider(ng-if="leadTeams.length>0") 为我管理的小队找对手
      .units.clearfix(ng-if="leadTeams.length>0")
        .unit(ng-repeat="team in leadTeams" ng-class="{'leader':team.isLeader}" ng-click="selectTeam(team.isLeader,$index)")
          img.logo(ng-src="{{STATIC_URL + team.logo}}/30/30")
          .text {{team.name }}
      .item.item-divider.clear_both(ng-if="memberTeams.length>0") 为我参加的小队推荐对手
      .units.clearfix(ng-if="memberTeams.length>0")
        .unit(ng-repeat="team in memberTeams" ng-class="{'leader':team.isLeader}" ng-click="selectTeam(team.isLeader,$index)")
          img.logo(ng-src="{{STATIC_URL + team.logo}}/30/30")
          .text {{team.name }}
    .selected_team(ng-if="hasSelected")
      .team.item.now_team
        img.logo(ng-src="{{STATIC_URL +myTeam.logo}}/30/30")
        .text
          .tname {{myTeam.name}}
          .type {{myTeam.groupType}}
        .operator
          button.button.button-small.button-clear.change_team(ng-click="changeTeam()") 更换小队
      .tab_view
        ul.nav
          li.opponent_tab_style.sameCity(ng-class="{'active':nowTab=='sameCity'}")
            a(ng-click="changeFilter('sameCity')") 
              span 同城
          li.opponent_tab_style.nearbyTeam(ng-class="{'active':nowTab=='nearbyTeam'}")
            a(ng-click="changeFilter('nearbyTeam')") 
              span 附近
          li.opponent_tab_style.search(ng-class="{'active':nowTab=='search'}")
            a(ng-click="changeFilter('search')") 
              input.search_opponent_input(ng-disabled="!myTeam" ng-model="$parent.keywords" placeholder="公司名字、小队名")
              button.search_button.button.icon.ion-search(ng-click="search()")
        .tab_content
          .teams(ng-if="teams.length>0")
            .team(ng-click="gotTeamDetail(team._id)" ng-repeat="team in teams")
              img.logo(ng-src="{{STATIC_URL +team.logo}}/45/45")
              .text
                .tname {{team.name}}
                .leader 公司: {{team.cname}}
                .rank
                  span 排名: {{team.rank}}
                  span 积分: {{team.score}}
                  span 活跃度: {{team.activity_score}}
                  span 胜率: {{team.odds_percent}}%
          .no_more_team(ng-if="teams.length==0")
            span 没有可以推荐的小队了
          .operator(ng-if="teams.length>0 &&page<maxPage")
            button.button.button-small.button-clear(ng-if="nowTab=='sameCity'" ng-click="changeRecommendTeam(nowTab)") 点击更换一批
            button.button.button-small.button-clear(ng-if="nowTab!=='sameCity'" ng-click="moreTeam(nowTab)") 点击显示更多