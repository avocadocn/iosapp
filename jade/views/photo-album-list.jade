ion-view
  ion-header-bar
    a.button.icon.ion-chevron-left(ng-href="#/team/{{teamId}}") &nbsp;返回
    h1.title 小队影集({{photoAlbums.length}})
  ion-content
    .card
      p 全家福(1)
      a(href="#/photo_album/detail")
        img(src="http://placehold.it/60x60")

    .card(ng-repeat="photoAlbum in photoAlbums")
      p: a(ng-href="#/photo_album/{{photoAlbum._id}}/detail") {{photoAlbum.name}}({{photoAlbum.photoCount}})
      img(ng-repeat="photo in photoAlbum.latestPhotos" ng-src="{{STATIC_URL + photo.uri}}/60/60")

    ion-infinite-scroll(on-infinite="loadMore()" distance="1%" ng-if="moreDataCanBeLoaded()")