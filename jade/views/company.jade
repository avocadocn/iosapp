ion-view.tab_company_page(ng-controller="CompanyController")

  ion-header-bar
    h1.title 公司

  ion-content
    .list
      .item.item-avatar.company_info_item
        img.company_logo(ng-src="{{STATIC_URL + company.logo}}/90/90")
        h2.company_name(ng-bind="company.shortName")
    .list
      a.item.item-icon-right.clearfix.staff_item(href="#/company/contacts")
        img.staff_photo(ng-repeat="staff in staffList" ng-src="{{STATIC_URL + staff.photo}}/60/60")
        span.more_text 更多同事
        i.icon.ion-chevron-right.icon_right
    .list.menu_list
      a.item.item-icon-left.item-icon-right(href="#/circle/circle_company")
        i.icon.ion-android-contacts.ionic_icon.icon_left
        | 精彩瞬间
        span.badge.badge-assertive(ng-if="newCircleComment") {{newCircleComment}}
        .badge_image(ng-if="newContent")
          .red_spot
          img.logo(ng-src="{{STATIC_URL + newContent.photo}}/60/60")
        i.icon.ion-chevron-right.icon_right
      a.item.item-icon-left.item-icon-right(href="#/company/teams/official")
        i.icon.ion_teams.donler_icon.icon_left
        | 全部小队
        span.item-note {{teams.length}}
        i.icon.ion-chevron-right.icon_right
      a.item.item-icon-left.item-icon-right(href="#/company/circle")
        i.icon.ion_ballon.donler_icon.icon_left
        | 所有活动
        i.icon.ion-chevron-right.icon_right
