ion-view.login
  ion-header-bar
    a.button.icon-left.ion-chevron-left(href="#/home") &nbsp;返回
    h1.title 注册
    a.button.icon-right.ion-chevron-right(href="#/user/login") 登录&nbsp;
  ion-content.register_search_company
    .register
      .register_header
        img.logo(src="./img/register/dl_logo_signup.png")
        img.universe(src="./img/register/dl_signup_universe.png")
      .register_body
        .board
          input(type="email" ng-model="companyEmail.value" ng-keypress="checkMail($event)" placeholder="请输入您的企业邮箱" required)
          a.search(ng-click="checkMail()" ng-disabled="loading") 查&nbsp;&nbsp;找
        .register_bottom
          img.register_cloud(src="./img/register/dl_signup_cloud.gif")