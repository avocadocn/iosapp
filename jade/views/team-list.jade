ion-view
  //- todo 由于在设计上所有小队和我的小队不太一样，不好共用一个模板，因此使用两个模板，现在该模板只用于所有小队
    以下内容需要全部修改
  ion-header-bar
    a.button.icon-left.ion-chevron-left(href="#/app/discover") &nbsp;返回
    h1.title {{title}}
  ion-content.all_team_list_page
    a.dl_team_card.clearfix(ng-repeat="team in teams" ng-href="#/team/{{team._id}}")
      img.team_logo(ng-src="{{STATIC_URL + team.logo}}/170/170")
      .team_info
        h2.team_name {{team.name}}
        p.team_cp_title {{team.lastCampaign.theme}}
        p.team_cp_title(ng-if="team.poster") 创建人: {{team.poster.nickname}}
        p.team_count
          span.team_member 队员：{{team.memberCount || '0'}}
          span.team_cp_number 活动：{{team.campaignCount || '0'}}
          span.team_cp_number 积分：{{team.score.total || '0'}}
        button.btn_quit(prevent-default ng-if="team.hasJoined" ng-click="quitTeam(team._id, $index)") 已加入小队
        button.btn_join(prevent-default ng-if="!team.hasJoined" ng-click="joinTeam(team._id, $index)") 立即加入
