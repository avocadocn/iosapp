ion-view
  ion-header-bar
    a.button.icon.ion-chevron-left(ng-href="{{backUrl}}") &nbsp;返回
    h1.title {{team.name}}的全家福相册
    .button.icon.ion-plus(ng-if="team.isLeader" ng-click="showUploadActionSheet()" ng-cloak)
  ion-content
    .dl_photo_album_card
      .card_header.clearfix
        p.header_title 全家福({{familyPhotos.length}})
      .clearfix
        .photo_wrap(ng-repeat="photo in familyPhotos")
          img.family_photo(ng-class="{'family_photo_selected': photo.select === true}" ng-src="{{STATIC_URL + photo.uri}}/60/60" ng-click="openPhotoSwipe(photo._id)")
          span.icon.ion-checkmark-circled(ng-if="photo.select === true" ng-cloak)
          .icon-background(ng-if="photo.select === true" ng-cloak)

.pswp(tabindex="-1" role="dialog" aria-hidden="true")
  .pswp__bg
  .pswp__scroll-wrap
    .pswp__container
      .pswp__item
      .pswp__item
      .pswp__item
    .pswp__ui.pswp__ui--hidden
      .pswp__top-bar
        .pswp__counter
        button.pswp__button.pswp__button--close(title="关闭")
        button.pswp__button.pswp__button--zoom(title="放大/缩小")
        button.pswp__button.toggle_select(ng-if="currentFamilyPhoto.select===false" ng-click="toggleSelect(currentFamilyPhoto)") 在小队主页显示
        button.pswp__button.toggle_select(ng-if="currentFamilyPhoto.select===true" ng-click="toggleSelect(currentFamilyPhoto)") 从小队主页隐藏
        .pswp__preloader
          .pswp__preloader__icn
            .pswp__preloader__cut
              .pswp__preloader__donut
      button.pswp__button.pswp__button--arrow--left(title="上一张")
      button.pswp__button.pswp__button--arrow--right(title="下一张")
      .pswp__caption
        .pswp__caption__center