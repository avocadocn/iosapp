ion-view
  ion-header-bar
    a.button.icon.ion-chevron-left(ng-href="{{backUrl}}") &nbsp;返回
    h1.title {{team.name}}的全家福相册
    .button.icon.ion-plus(ng-if="team.isLeader" ng-click="showUploadActionSheet()" ng-cloak)
  ion-content
    .dl_photo_album_card
      .card_header.clearfix
        p.header_title 全家福({{familyPhotos.length}})
      .clearfix
        img.photo(ng-repeat="photo in familyPhotos" ng-class="{'dl_family_photo_selected': photo.select === true}" ng-src="{{STATIC_URL + photo.uri}}/60/60" ng-click="toggleSelect(photo)")

include ./photo-swipe